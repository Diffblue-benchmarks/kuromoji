<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>kuromoji</artifactId>
        <groupId>com.atilika.kuromoji</groupId>
        <version>0.9-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <name>Kuromoji JUMAN DIC</name>

    <artifactId>kuromoji-jumandic</artifactId>
    <packaging>jar</packaging>

    <properties>
        <kuromoji.dict.file>mecab-jumandic-7.0-20130310.tar.gz</kuromoji.dict.file>
        <kuromoji.dict.url>http://atilika.com/releases/mecab-jumandic/${kuromoji.dict.file}</kuromoji.dict.url>
        <kuromoji.dict.dir>${project.basedir}/dictionary/mecab-jumandic-7.0-20130310</kuromoji.dict.dir>
        <kuromoji.dict.targetdir>${project.basedir}/src/main/resources/com/atilika/kuromoji/jumandic</kuromoji.dict.targetdir>
        <kuromoji.dict.encoding>utf-8</kuromoji.dict.encoding>
        <kuromoji.dict.compact>false</kuromoji.dict.compact>
    </properties>

    <profiles>
        <profile>
            <id>compile-dictionary</id>
            <activation>
                <property>
                    <name>!skipCompileDictionary</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-resources-plugin</artifactId>
                        <version>2.7</version>
                        <executions>
                            <execution>
                                <id>copy-license-resources</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.build.outputDirectory}/META-INF</outputDirectory>
                                    <resources>
                                        <resource>
                                            <!-- Becomes top level directory. Is there a better way to do this? -->
                                            <directory>${project.basedir}/..</directory>
                                            <filtering>false</filtering>
                                            <includes>
                                                <include>LICENSE.md</include>
                                                <include>CONTRIBUTORS.md</include>
                                            </includes>
                                        </resource>
                                        <resource>
                                            <directory>${project.basedir}</directory>
                                            <filtering>false</filtering>
                                            <includes>
                                                <include>NOTICE.md</include>
                                            </includes>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.6</version>
                        <executions>
                            <execution>
                                <id>download-dictionary</id>
                                <phase>generate-resources</phase>
                                <configuration>
                                    <target unless="skipDownloadDictionary">
                                        <echo message="Downloading dictionary"/>
                                        <delete dir="dictionary"/>
                                        <mkdir dir="dictionary"/>
                                        <get src="${kuromoji.dict.url}"
                                             dest="dictionary/${kuromoji.dict.file}"
                                             verbose="true"/>
                                        <untar src="dictionary/${kuromoji.dict.file}"
                                               dest="dictionary" compression="gzip"/>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.3</version>
                        <executions>
                            <execution>
                                <id>compile-dictionary-compiler</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>compile</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.2.1</version>
                        <executions>
                            <execution>
                                <id>run-dictionary-compiler</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <mainClass>com.atilika.kuromoji.jumandic.compile.DictionaryCompiler</mainClass>
                            <arguments>
                                <argument>${kuromoji.dict.dir}</argument>
                                <argument>${kuromoji.dict.targetdir}</argument>
                                <argument>${kuromoji.dict.encoding}</argument>
                                <argument>${kuromoji.dict.compact}</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>com.atilika.kuromoji</groupId>
            <artifactId>kuromoji-common</artifactId>
            <version>0.9-SNAPSHOT</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.atilika.kuromoji</groupId>
            <artifactId>kuromoji-common</artifactId>
            <version>0.9-SNAPSHOT</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

</project>
